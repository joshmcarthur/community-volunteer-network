<% provide(:title, "Adding a social network link for #{@street.name}") %>

<div class="col-sm-10 mt-4 mb-4 offset-sm-1 col-md-6 offset-md-3">
  <%= form_with model: [@street, @social_network], url: street_social_networks_path, html: { class: "card" } do |f| %>
    <div class="card-body">
    <h5 class="card-title"><%= content_for :title %></h5>
    <div class="form-group">
      <%= f.label :network %>
      <%= f.select :network, StreetSocialNetwork.networks.map { |n| [n.first.humanize, n.first] }, {}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :link %>
      <%= f.url_field :link, class: 'form-control' %>
    </div>

    <%= f.submit "Add social network link for #{@street.name}", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
