<% provide(:title, t('.title', resource: resource_name.to_s.humanize)) %>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-4 card", method: :put }) do |f| %>
  <div class="card-body">
        <h5 class="card-title"><%= t('.title', resource: resource_name.to_s.humanize) %></h5>


  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autocomplete: 'name', class: 'form-control' %>
    <%= f.error :name %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, utocomplete: 'email', class: 'form-control' %>
    <%= f.error :email %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number, autocomplete: 'telephone', class: 'form-control' %>
    <%= f.error :phone_number %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
    <%= f.error :password %>

    <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
    <%= f.error :password_confirmation %>

  </div>

  <div class="form-group">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
    <%= f.error :current_password %>

    <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
  </div>

  <div class="form-group">
    <%= f.submit t('.update'), class: 'btn btn-primary' %>
    <%= link_to t('.back'), :back, class: "btn btn-secondary" %>
  </div>
  </div>
<% end %>

<div class="card card-body mt-3">
<p><%= t('.unhappy') %>?</p>
<br />
<%= link_to t('.cancel_my_account'), registration_path(resource_name), class: 'btn btn-sm btn-outline-danger', data: { confirm: t('.are_you_sure') }, method: :delete %>
</div>

